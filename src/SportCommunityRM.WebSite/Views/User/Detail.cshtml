@model SportCommunityRM.WebSite.ViewModels.User.DetailViewModel
@{
    ViewData["Title"] = Model.Name;
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <div class="form-horizontal">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.FirstName)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.LastName)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    @{ var birthDate = Model.BirthDate.ToShortDateString(); }
                    @Html.DisplayFor(model => birthDate)
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        @*User profile picture*@
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="teams-heading">
                <h4 class="panel-title">
                    <a href="#teams-collapse" role="button" data-toggle="collapse" aria-expanded="true" aria-controls="teams-collapse">
                        <i class="fa fa-group"></i> Teams
                    </a>
                </h4>
            </div>
            <div class="panel-collapse collapse in" role="tabpanel" id="teams-collapse" aria-labelledby="teams-heading">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>@*Actions header*@</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Teams.IsNullOrEmpty())
                                {
                                    <tr>
                                        <td colspan="2">No team to display</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var team in Model.Teams)
                                    {
                                        <tr>
                                            <td>@team.Name</td>
                                            <td>
                                                <a class="text-info" asp-action="Detail" asp-controller="Team" asp-route-id="@team.Id" title="Detail">
                                                    <i class="glyphicon glyphicon-search"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>