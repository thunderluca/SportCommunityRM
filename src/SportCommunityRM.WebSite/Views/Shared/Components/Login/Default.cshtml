@model SportCommunityRM.WebSite.Components.LoginViewComponent.Model
@if (Model.IsLogged)
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle no-padding" id="user-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    @Model.Username <img alt="@Model.Username" class="img-circle img-square x-small hidden-xs" src="@Url.Action(nameof(UserController.Picture), "User", new { username = Model.Username, size = 20 })" />
                </a>
                <ul class="dropdown-menu" aria-labelledby="user-menu">
                    <li>
                        <a asp-action="Detail" asp-controller="User" asp-route-id="@Model.RegisteredUserId" class="btn btn-link">
                            My profile <i class="glyphicon glyphicon-search"></i>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Manage" class="btn btn-link">
                            Manage <i class="fa fa-gear"></i>
                        </a>
                    </li>
                </ul>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">
                    Log out <i class="fa fa-sign-out"></i>
                </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
